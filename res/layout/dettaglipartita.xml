<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:columnCount="2"
        android:rowCount="2" >

        <ImageView
            android:id="@+id/imageSquadraCasa"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/imageSquadraOspite"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/squadraCasa"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="squadraCasa" />

        <TextView
            android:id="@+id/squadraOspite"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="squadraOspite" />

    </GridLayout>

 
    <TextView
        android:id="@+id/viewDescrizione"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	   
	    <Button
	        android:id="@+id/buttonPercorso"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/buttonPercorsoLabel" 
	        style="@style/button"/>

	    <Button
	        android:id="@+id/buttonAlloggio"
	        style="@style/button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:text="@string/buttonAlloggioLabel" />

	</RelativeLayout>
</LinearLayout>