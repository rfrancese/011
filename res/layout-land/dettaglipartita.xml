<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutDettagliPartita"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp" >

<LinearLayout
    android:id="@+id/linearLabelSquadre"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center" >

        <TextView
            android:id="@+id/squadraCasa"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="squadraCasa"
            android:layout_marginRight="20dp" 
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/squadraOspite"
             android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="squadraOspite" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/linearLabelLoghi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
        <ImageView
            android:id="@+id/imageSquadraCasa"
            android:src="@drawable/ic_launcher"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
             />

        <ImageView
            android:id="@+id/imageSquadraOspite"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutDescrizione"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/viewDescrizione"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtonDettagliPartita"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPercorso"
            style="@style/button"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginRight="60dp"
            android:text="@string/buttonPercorsoLabel" />

        <Button
            android:id="@+id/buttonAlloggio"
            style="@style/button"
			android:layout_width="110dp"
            android:layout_height="90dp"
            android:text="@string/buttonAlloggioLabel" />
    </LinearLayout>

</LinearLayout>